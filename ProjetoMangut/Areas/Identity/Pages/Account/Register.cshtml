@page
@model RegisterModel
@{
    ViewData["Title"] = "Criar nova conta";
}
<br />
<h1>&nbsp;</h1>

<div class="row">
    <div class="col-md-4" style="margin: 0 auto">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Crie sua conta em 3 passos</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p><b>1. </b>Endereço de e-mail</p>
            <div class="form-floating" style="margin-bottom:6px">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <p><b>2. </b>Crie uma senha</p>
            <div class="form-floating" style="margin-bottom:6px">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <p><b>3. </b>Repita sua senha</p>
            <div class="form-floating"style="margin-bottom:14px">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" style="margin-top:4px">Cadastre-se</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
