@model IEnumerable<SegundaEntrega.Models.Produto>

@{
    ViewData["Title"] = "Home Page";
}
<div class="container" >
    <div class="container row col-sm mt-3 mt-md-3 mt-sm-3" >
        <h4 class="col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4 mt-3 mr-2 text-center text-uppercase">
            Lista de Produtos
        </h4>
        <form action="/Index" method="get" class="row col-12 col-sm-8 col-md-8 col-lg-8 col-xl-8 mt-3 form-inline my-2 my-lg-0">
            <input type="text" name="Termo Busca" placeholder="Nome do produto a buscar" class="col form-control mr-sm-2" />
            <button class="col-4 btn btn-secondary my-2 my-sm-0" type="submit">
                Buscar
            </button>
        </form>
    </div>

<div class="container row">
    @foreach (var produto in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2 mt-3">
              <div class="d-flex justify-content-center">  <img src="~/images/@produto.ImagemProduto"
                 class="rounded-circle"
                 height="150" width="150"
                 asp-append-version="true" />
             </div>

             <div class="d-flex justify-content-center">
                 @produto.NomeTipo
             </div>
             <p class="d-flex justify-content-center">    
                 <input class="btn btn-sm btn-primary rounded-0 text-uppercase" type='button' onclick='ObjetoVenda.SalvarVenda(" + entry.id + ")' value ='Comprar'>
             </p>
        </div>
    }
</div>
</div>
